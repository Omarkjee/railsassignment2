<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <%# Sortable headers %>
      <th class="sortable <%= 'asc' if sort_column == 'title' && sort_direction == 'asc' %> <%= 'desc' if sort_column == 'title' && sort_direction == 'desc' %>" 
          aria-sort="<%= sort_column == 'title' ? sort_direction : 'none' %>">
        <%= link_to "Title", movies_path(sort: "title", direction: sort_column == "title" && sort_direction == "asc" ? "desc" : "asc") %>
      </th>

      <th class="sortable <%= 'asc' if sort_column == 'rating' && sort_direction == 'asc' %> <%= 'desc' if sort_column == 'rating' && sort_direction == 'desc' %>" 
          aria-sort="<%= sort_column == 'rating' ? sort_direction : 'none' %>">
        <%= link_to "Rating", movies_path(sort: "rating", direction: sort_column == "rating" && sort_direction == "asc" ? "desc" : "asc") %>
      </th>

      <th class="sortable <%= 'asc' if sort_column == 'release_date' && sort_direction == 'asc' %> <%= 'desc' if sort_column == 'release_date' && sort_direction == 'desc' %>" 
          aria-sort="<%= sort_column == 'release_date' ? sort_direction : 'none' %>">
        <%= link_to "Release Date", movies_path(sort: "release_date", direction: sort_column == "release_date" && sort_direction == "asc" ? "desc" : "asc") %>
      </th>

      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date.strftime("%d-%b-%Y") if movie.release_date %></td>
        <td>
          <%= link_to 'Show', movie_path(movie, sort: sort_column, direction: sort_direction) %> |
          <%= link_to 'Edit', edit_movie_path(movie, sort: sort_column, direction: sort_direction) %> |
          <%= link_to 'Destroy', movie_path(movie, sort: sort_column, direction: sort_direction), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="4">Total movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>

<%= link_to 'New Movie', new_movie_path(sort: sort_column, direction: sort_direction), class: "button" %>
